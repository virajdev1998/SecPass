<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.secpass">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.Copy_to_clipbord" />
        <activity android:name=".ui.AddNameActivity" />
        <activity android:name=".ui.PassportActivity" />
        <activity android:name=".ui.DrivingLicenseActivity" />
        <activity android:name=".ui.AddAddressActivity" />
        <activity android:name=".ui.AddElectionCardActivity" />
        <activity android:name=".ui.AddPanCardActivity" />
        <activity android:name=".ui.AddSocialMediaSites" />
        <activity android:name=".ui.AddEcommerceSitesActivity" />
        <activity
            android:name=".ui.DashBoardActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".ui.UserLoginActivity" />
        <activity android:name=".ui.VerifyMainSecPassActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>