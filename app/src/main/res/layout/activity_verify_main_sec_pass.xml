<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.VerifyMainSecPassActivity"
    android:background="@color/colorBlue">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:src="@drawable/ic_lock"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_master_password_or_use_your_fingerprint"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="48dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/unlock_secpass"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_password_border"
        android:orientation="vertical"
        android:layout_marginTop="128dp"
        android:layout_marginHorizontal="84dp">

        <EditText
            android:id="@+id/etPassword"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FECBB2"/>

    </LinearLayout>



</LinearLayout>